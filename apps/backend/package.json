{
  "name": "@frcn/backend",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "nodemon -e js,mjs,cjs,ts,mts,cts,json --exec \"node --loader ts-node/esm --loader extensionless --no-warnings src/server.ts\"",
    "start": "node --loader extensionless --no-warnings dist/server.js",
    "build": "tsc -p tsconfig.prod.json && cp src/graphql/schema/schema.generated.graphql dist/graphql/schema",
    "db-generate": "prisma generate",
    "db-migrate": "prisma migrate dev",
    "db-push": "prisma db push",
    "db-deploy": "prisma migrate deploy",
    "gql-generate": "pnpm gql-generate-schema && graphql-codegen --config codegen.yml",
    "gql-generate-schema": "node --loader ts-node/esm --loader extensionless --no-warnings src/graphql/schema/generateSchema.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@aws-sdk/client-s3": "^3.504.0",
    "@aws-sdk/lib-storage": "^3.504.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@frcn/cms": "workspace:^",
    "@frcn/cms-events": "workspace:^",
    "@frcn/shared": "workspace:^",
    "@graphql-tools/schema": "^10.0.2",
    "@graphql-tools/utils": "^10.0.12",
    "@prisma/client": "^5.12.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "apollo-server-core": "^3.13.0",
    "bcrypt": "^5.1.1",
    "connect-timeout": "^1.9.0",
    "cookie": "^0.6.0",
    "cookie-parser": "^1.4.6",
    "cookie-signature": "^1.2.1",
    "cors": "^2.8.5",
    "discord.js": "^14.14.1",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "express-status-monitor": "^1.3.4",
    "extensionless": "^1.9.6",
    "file-system-cache": "^2.4.4",
    "fluent-ffmpeg": "^2.1.2",
    "graphql": "^16.8.1",
    "graphql-constraint-directive": "^5.3.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.3",
    "jsonschema": "^1.4.1",
    "mime-types": "^2.1.35",
    "multer": "1.4.5-lts.1",
    "pg-tbus": "^1.0.0",
    "prisma": "^5.12.0",
    "validator": "^13.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@frcn/graphql-scalar-types": "workspace:^",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-timeout": "^0.0.39",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/cookie-signature": "^1.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/express-status-monitor": "^1.3.3",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/validator": "^13.11.8",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2"
  }
}